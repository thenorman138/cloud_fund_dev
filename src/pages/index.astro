    <div class="cloud-container">
      <div style="opacity:0;">
        <Fragment set:html={Clouds} />
      </div>
      <h1 class="mountain-reveal-text">
        FROM THE PEAKS TO THE VALLIES,<br />WE WILL NEVER SAY NO
      </h1>
      <div class="cloud-reveal">
        <img
          class="cloud-reveal-img"
          src="./public/assets/img/cloud-reveal-FINAL.png"

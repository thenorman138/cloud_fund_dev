    <div class="counter-grid grid grid-cols-5 gap-5">
      <div class="counter-items">
        <div class="counter-img" id="counter-img-1">
          <!-- <Fragment set:html={CounterCircle} /> -->
        </div>
        <div class="counter-text">$1.8 MILLION DIRECT DONATION</div>
